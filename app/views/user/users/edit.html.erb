<div class="main">
  <div class="user-account-box">
  	<div class="input-area">

      <%= form_for @user, url: user_user_path do |f| %>
        <% if @user.errors.any? %>
               <% @user.errors.full_messages.each do |message| %>
                 <p class="error"><%= message %></p>
               <% end %>
        <% end %>


        <div class="user-account-columns">
          <p class="bold">名前</p>
          <%= f.text_field :name, class: "edit-useraccount" %>
        </div>
        <div class="user-account-columns">
          <p class="bold">名前（カナ）</p>
          <%= f.text_field :name_kana, class: "edit-useraccount" %>
        </div>
        <div class="user-account-columns">
          <p class="bold">郵便番号</p>
          <%= f.text_field :postal_code, class: "edit-useraccount" %>
        </div>
        <div class="user-account-columns">
          <p class="bold">住所</p>
          <%= f.text_field :address, class: "edit-useraccount" %>
        </div>
        <div class="user-account-columns">
          <p class="bold">電話番号</p>
          <%= f.text_field :tel_number, class: "edit-useraccount" %>
        </div>
       <div class="user-account-columns">
          <p class="bold">メールアドレス</p>
          <%= f.text_field :email, class: "edit-useraccount" %>
        </div>

        <div class="right">
          <%= f.submit :class=>"btn btn-primary" do %>
            <p class="buttonwidth">更新</p>
          <% end %>
          <%= link_to :user, class: "btn btn-primary" do %>
          <p class="buttonwidth">退会ページへ</p>
          <% end %>
        </div>
    </div>
  </div>
  <% end %>

  <div class="pass-link">
    <%= link_to "パスワードを変更する", edit_user_registration_path %>
  </div>
　<div class="block">
    <%= link_to :back, class: "btn btn-primary" do %>
      <p class="buttonwidth">戻る</p>
    <% end %>
  </div>

</div>
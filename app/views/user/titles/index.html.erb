<h3>ユーザー商品一覧</h3>

<% @titles.each do |title| %>
<div class="container"> <!-- ここを追加 -->
    <div class="row" style="background-color: #EEEEEE">   <!-- ここを追加 -->

        <div class="col-lg-2" style="background-color: red">


        </div>
        <div class="col-lg-4" style="background-color: lightgreen">
            <div>
               <%= attachment_image_tag title, :image, :fill, 300, 300 %>
            </div>
        </div>
        <div class="col-lg-2" style="background-color: green">
            <div>
                <p>タイトル:</p>
                <%= title.title %>
                <p>アーティスト名:</p>
                <!-- artistテーブルから持ってこれるように -->
                <p><%= title.artist_id %></p>
                <p>値段:</p>
                <%= title.price %>
                <p>ジャンル:</p>
                <%= title.genre_id %>
                <p>レーベル:</p>
                <%= title.label_id %>
                <p>在庫:</p>
                <% if (title.stock == 0) %>
                    <p>無</p>
                <% else %>
                    <p>有</p>
                <% end %>
            </div>
        </div>
        <div class="col-lg-2" style="background-color: orange">
        <%= form_for([:user, @cart_item]) do |f| %>
            <%= f.text_field :purchase_number %>
            <%= f.hidden_field :title_id, value: title.id %>
            <%= f.submit "カートに追加", class:"btn btn-primary"%>
            <%= title.id %>
        <% end %>

        </div>

        <div class="col-lg-2" style="background-color: blue">
        </div>
    </div>
</div>
<% end %>
       <%= paginate @titles, class: "pagenate" %>



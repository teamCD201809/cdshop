    <% @titles.each do |title| %>

    <div class="container main">
        <div class="row" style="background-color: #EEEEEE">

            <div class="col-lg-4">
                <div>
                   <%= attachment_image_tag title, :image, :fill, 300, 300 %>
                </div>
            </div>
            <div class="col-lg-2">
                <div>
                    <p>タイトル:</p>
                    <%= title.title %>
                    <p>アーティスト名:</p>
                    <%= title.artist.artist %>
                    <p>値段:</p>
                    <%= title.price %>
                    <p>ジャンル:</p>
                    <%= title.genre.genre %>
                    <p>レーベル:</p>
                    <%= title.label.label %>
                    <p>在庫:</p>
                    <% if (title.stock == 0) %>
                        <p>無</p>
                    <% else %>
                        <p>有</p>
                    <% end %>
                </div>
            </div>
            <div class="col-lg-2">
                <%= link_to "商品詳細ページへ", user_title_path(title.id), class:"btn btn-primary" %>

            </div>
            <div class="col-lg-4">
                <%= form_for([:user, @cart_item]) do |f| %>
                    <%= f.text_field :purchase_number %>
                    <%= f.hidden_field :title_id, value: title.id %>
                    <%= f.submit "カートに追加", class:"btn btn-primary"%>
                <% end %>
            </div>
        </div>
    </div>
    <br>
    <% end %>
           <%= paginate @titles, class: "pagenate" %>



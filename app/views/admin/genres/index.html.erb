<main style="text-align: center;">

  <p id="notice"><%= notice %></p>

  <h1>ジャンル一覧</h1>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        <td>|</td>
        <td><%= link_to '削除',[:admin, genre],class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @genres %><br>
<%= link_to '新規登録', new_admin_genre_path,class: "btn btn-primary" %>


</main>
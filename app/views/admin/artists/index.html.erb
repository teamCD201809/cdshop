<main style="text-align: center;">
  <p id="notice"><%= notice %></p>

  <h1>アーティスト一覧</h1>

  <table>
    <thead>
      <tr>
        <th>アーティスト</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.artist %></td>
          <td><%= link_to '編集', edit_admin_artist_path(artist), class: "btn btn-primary" %></td>
          <td>|</td>
          <td ><%= link_to '削除', [:admin, artist],class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @artists %><br>
  <%= link_to '新規登録', new_admin_artist_path,class: "btn btn-primary" %>
</main>
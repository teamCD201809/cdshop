<p id="notice"><%= notice %></p>

<h1>レーベル一覧</h1>

<table>
  <thead>
    <tr>
      <th>レーベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.label %></td>
        <td><%= link_to '編集', edit_admin_label_path(label) %></td>
        <td><%= link_to '削除', [:admin, label], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @labels %><br>
<%= link_to '新規作成', new_admin_label_path %>
